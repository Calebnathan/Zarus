/**
 * Zarus Main Theme
 * Modern, sleek UI style for strategy game
 * 
 * Artist-Friendly: Modify variables below to change the entire UI theme
 */

/* ========================================
   THEME VARIABLES (Modify these!)
   ======================================== */

:root {
    /* Primary Colors */
    --color-primary: #4fd7ff;                  /* Neon cyan */
    --color-secondary: #ff9a5b;                /* Vibrant orange */
    --color-tertiary: #b787ff;                 /* Electric purple */
    
    /* Background Colors */
    --bg-dark: rgba(3, 7, 16, 0.96);
    --bg-medium: rgba(9, 16, 28, 0.9);
    --bg-light: rgba(16, 26, 44, 0.88);
    --bg-overlay: rgba(2, 5, 12, 0.8);
    --glass-background: rgba(14, 24, 40, 0.65);
    --surface-border: rgba(255, 255, 255, 0.18);
    
    /* Text Colors */
    --text-primary: rgb(233, 241, 255);
    --text-secondary: rgb(181, 196, 220);
    --text-muted: rgb(118, 136, 160);
    --text-accent: #6df4ff;
    
    /* State Colors */
    --color-success: rgb(80, 200, 120);        /* Green */
    --color-warning: rgb(255, 180, 50);        /* Orange */
    --color-error: rgb(235, 87, 87);           /* Red */
    --color-info: rgb(100, 181, 246);          /* Blue */
    
    /* UI Feedback */
    --hover-overlay: rgba(255, 255, 255, 0.08);
    --active-overlay: rgba(255, 255, 255, 0.14);
    --focus-glow: rgba(79, 215, 255, 0.55);
    
    /* Borders & Outlines */
    --border-color: rgba(255, 255, 255, 0.12);
    --border-color-bright: rgba(255, 255, 255, 0.28);
    --border-width: 2px;
    --border-radius-small: 6px;
    --border-radius-medium: 10px;
    --border-radius-large: 16px;
    
    /* Spacing */
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 16px;
    --spacing-lg: 24px;
    --spacing-xl: 32px;
    --spacing-xxl: 48px;
    
    /* Typography */
    --font-size-small: 12px;
    --font-size-normal: 16px;
    --font-size-large: 20px;
    --font-size-xlarge: 28px;
    --font-size-title: 36px;
    
    /* Transitions */
    --transition-fast: 0.15s;
    --transition-normal: 0.3s;
    --transition-slow: 0.5s;
    
    /* Effects */
    --shadow-small: 0 4px 18px rgba(0, 0, 0, 0.35);
    --shadow-medium: 0 10px 26px rgba(0, 0, 0, 0.45);
    --shadow-large: 0 16px 40px rgba(0, 0, 0, 0.55);
    --glow-primary: 0 0 30px rgba(79, 215, 255, 0.55);
}

/* ========================================
   BASE STYLES
   ======================================== */

.unity-label {
    color: var(--text-primary);
    -unity-font-definition: url("project://database/Assets/Fonts/Roboto-Regular 1 SDF.asset?fileID=11400000&guid=21a08988cc3416b58abd39431e45c023&type=2#Roboto-Regular 1 SDF");
    font-size: var(--font-size-normal);
}

.unity-text-element {
    color: var(--text-primary);
    -unity-font-definition: url("project://database/Assets/Fonts/Roboto-Regular 1 SDF.asset?fileID=11400000&guid=21a08988cc3416b58abd39431e45c023&type=2#Roboto-Regular 1 SDF");
}

/* Font Styles */
.font-roboto {
    -unity-font: url('/Assets/Fonts/Roboto-Regular.ttf');
}

.font-inter {
    -unity-font: url('/Assets/Fonts/Inter-Regular.ttf');
}

.font-inter-bold {
    -unity-font: url('/Assets/Fonts/Inter-Bold.ttf');
}

.font-inter-semibold {
    -unity-font: url('/Assets/Fonts/Inter-SemiBold.ttf');
}

/* ========================================
   SCREEN CONTAINERS
   ======================================== */

.screen-container {
    flex-grow: 1;
    background-color: var(--bg-dark);
    padding: var(--spacing-lg);
    align-items: center;
    justify-content: center;
}

.panel {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: var(--border-width);
    border-radius: var(--border-radius-medium);
    padding: var(--spacing-lg);
}

.panel--highlighted {
    border-color: var(--color-primary);
    background-color: rgba(79, 215, 255, 0.08);
}

.surface-glass {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: var(--border-width);
    border-radius: var(--border-radius-medium);
}

/* ========================================
   BUTTONS
   ======================================== */

.button {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: var(--border-width);
    border-radius: var(--border-radius-small);
    padding: var(--spacing-md) var(--spacing-lg);
    color: var(--text-primary);
    font-size: var(--font-size-normal);
    transition-property: background-color, border-color, scale;
    transition-duration: var(--transition-fast);
    -unity-font-style: bold;
}

.button:hover {
    background-color: rgba(79, 215, 255, 0.08);
    border-color: var(--border-color-bright);
    scale: 1.02;
}

.button:active {
    scale: 0.98;
    background-color: var(--bg-dark);
}

.button--primary {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: rgb(3, 8, 16);
}

.button--primary:hover {
    background-color: #6ce3ff;
    border-color: #6ce3ff;
}

.button--secondary {
    background-color: transparent;
    border-color: var(--color-tertiary);
    color: var(--color-tertiary);
}

.button--secondary:hover {
    background-color: rgba(183, 135, 255, 0.15);
}

.button--danger {
    background-color: var(--color-error);
    border-color: var(--color-error);
    color: rgb(3, 8, 16);
}

.button--danger:hover {
    background-color: rgb(255, 120, 120);
}

/* ========================================
   HUD ELEMENTS
   ======================================== */

.hud-container {
    position: absolute;
    width: 100%;
    height: 100%;
    flex-direction: column;
    padding: var(--spacing-lg);
    align-items: flex-start;
}

.hud-top {
    flex-direction: row;
    justify-content: flex-start;
    padding: 0;
}

.hud-bottom {
    flex-direction: row;
    justify-content: center;
    padding: var(--spacing-md);
    margin-top: auto;
}

.hud-left-column {
    flex-direction: column;
    width: 360px;
    max-width: 420px;
    align-items: stretch;
}

.hud-card {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: var(--border-width);
    border-radius: var(--border-radius-medium);
    padding: var(--spacing-md);
    flex-direction: column;
    align-items: stretch;
    margin-bottom: var(--spacing-md);
}

.hud-card--flush {
    margin-bottom: 0;
}

.hud-card--stack {
}

.hud-card__section {
    flex-direction: column;
    align-items: flex-start;
    padding: var(--spacing-sm) 0;
    margin-bottom: 0;
}

.hud-card__section--flush {
    padding-bottom: 0;
}

.hud-stack-item--sm {
    margin-bottom: var(--spacing-xs);
}

.hud-stack-item--flush {
    margin-bottom: 0;
}

.hud-divider {
    height: 1px;
    background-color: rgba(255, 255, 255, 0.08);
    margin: var(--spacing-sm) 0;
}

.hud-stat {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: var(--border-width);
    border-radius: var(--border-radius-small);
    padding: var(--spacing-sm) var(--spacing-md);
    margin: var(--spacing-xs);
    flex-direction: row;
    align-items: center;
}

.hud-stat--vertical {
    flex-direction: column;
    align-items: flex-start;
    min-width: 200px;
}


.hud-stat__label {
    color: var(--text-muted);
    font-size: var(--font-size-small);
    margin-right: var(--spacing-sm);
    margin-bottom: var(--spacing-xs);
    -unity-font-definition: url("project://database/Assets/Fonts/Roboto-Regular 1 SDF.asset?fileID=11400000&guid=21a08988cc3416b58abd39431e45c023&type=2#Roboto-Regular 1 SDF");
}

.hud-stat__value {
    color: var(--text-primary);
    font-size: var(--font-size-large);
    -unity-font-style: bold;
    margin-bottom: var(--spacing-xs);
    -unity-font-definition: url("project://database/Assets/Fonts/Roboto-Regular 1 SDF.asset?fileID=11400000&guid=21a08988cc3416b58abd39431e45c023&type=2#Roboto-Regular 1 SDF");
}

.hud-timer-detail {
    font-size: 13px;
    color: var(--text-secondary);
    opacity: 0.9;
    margin-top: 2px;
}

.hud-cure-progress {
    min-width: 260px;
}

.hud-cure-progress__bar {
    width: 100%;
    height: 18px;
    margin-top: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
}

.hud-outpost-summary {
    flex-direction: column;
    align-items: flex-start;
    min-width: 240px;
}

.hud-province-actions {
    background-color: transparent;
    border-width: 0;
    border-radius: 0;
    padding: 0;
    flex-direction: column;
    min-width: 100%;
}

.hud-outpost-status--none {
    color: var(--text-secondary);
}

.hud-outpost-status--active {
    color: var(--color-success);
}

.hud-outpost-status--disabled {
    color: var(--color-warning);
}

.hud-button {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    border-width: 0;
    border-radius: var(--border-radius-small);
    color: rgb(3, 8, 16);
    padding: var(--spacing-sm) var(--spacing-md);
    -unity-font-style: bold;
}

.hud-button:disabled {
    background-color: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.4);
}

.hud-province-info {
    opacity: 0;
    translate: 0 16px;
    transition-property: opacity, translate;
    transition-duration: var(--transition-normal);
    align-self: stretch;
}

.hud-province-info--visible {
    opacity: 1;
    translate: 0 0;
}

/* ========================================
   MENU ELEMENTS
   ======================================== */

.menu-panel {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: var(--border-width);
    border-radius: var(--border-radius-large);
    padding: var(--spacing-xl);
    min-width: 400px;
    align-items: center;
}

.menu-title {
    font-size: var(--font-size-title);
    color: var(--text-primary);
    -unity-font-style: bold;
    margin-bottom: var(--spacing-lg);
    -unity-text-align: middle-center;
}

.menu-subtitle {
    font-size: var(--font-size-large);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
}

.menu-button-group {
    width: 100%;
    margin-top: var(--spacing-md);
}

.menu-button {
    width: 100%;
    margin-bottom: var(--spacing-sm);
    min-height: 50px;
}

.end-stats {
    width: 100%;
    background-color: rgba(8, 16, 28, 0.85);
    border-radius: var(--border-radius-small);
    border-color: var(--surface-border);
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    flex-direction: column;
}

.end-stat {
    font-size: var(--font-size-normal);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xs);
}

.end-outcome--victory {
    border-color: var(--color-success);
}

.end-outcome--defeat {
    border-color: var(--color-error);
}

/* ========================================
   OVERLAY & BACKDROP
   ======================================== */

.overlay-backdrop {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--bg-overlay);
    align-items: center;
    justify-content: center;
}

/* ========================================
   UTILITY CLASSES
   ======================================== */

.hidden {
    display: none;
}

.flex-row {
    flex-direction: row;
}

.flex-column {
    flex-direction: column;
}

.align-center {
    align-items: center;
}

.justify-center {
    justify-content: center;
}

.text-center {
    -unity-text-align: middle-center;
}

.text-left {
    -unity-text-align: middle-left;
}

.text-right {
    -unity-text-align: middle-right;
}

.margin-sm {
    margin: var(--spacing-sm);
}

.margin-md {
    margin: var(--spacing-md);
}

.padding-sm {
    padding: var(--spacing-sm);
}

.padding-md {
    padding: var(--spacing-md);
}

.padding-lg {
    padding: var(--spacing-lg);
}

/* ========================================
   FADE ANIMATIONS
   ======================================== */

.fade-in {
    opacity: 0;
    transition-property: opacity;
    transition-duration: var(--transition-normal);
}

.fade-in--active {
    opacity: 1;
}

.slide-up {
    translate: 0 50px;
    opacity: 0;
    transition-property: translate, opacity;
    transition-duration: var(--transition-normal);
}

.slide-up--active {
    translate: 0 0;
    opacity: 1;
}

/* ========================================
   UPGRADE PANEL
   ======================================== */

.upgrade-panel-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(2, 5, 12, 0.85);
    align-items: center;
    justify-content: center;
}

.upgrade-panel {
    background-color: var(--glass-background);
    border-color: var(--surface-border);
    border-width: 2px;
    border-radius: var(--border-radius-large);
    padding: var(--spacing-lg);
    min-width: 720px;
    max-width: 900px;
    max-height: 90%;
}

.upgrade-panel__header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom-width: 1px;
    border-bottom-color: rgba(255, 255, 255, 0.1);
}

.upgrade-panel__title {
    font-size: var(--font-size-xlarge);
    color: var(--text-primary);
    -unity-font-style: bold;
}

.upgrade-panel__close-button {
    background-color: transparent;
    border-width: 0;
    color: var(--text-muted);
    font-size: var(--font-size-large);
    padding: var(--spacing-xs) var(--spacing-sm);
    min-width: 36px;
    min-height: 36px;
}

.upgrade-panel__close-button:hover {
    color: var(--color-error);
    background-color: rgba(235, 87, 87, 0.15);
    border-radius: var(--border-radius-small);
}

.upgrade-panel__budget {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: rgba(79, 215, 255, 0.08);
    border-radius: var(--border-radius-small);
    padding: var(--spacing-sm) var(--spacing-md);
    margin-bottom: var(--spacing-md);
}

.upgrade-panel__budget-label {
    color: var(--text-secondary);
    font-size: var(--font-size-normal);
    margin-right: var(--spacing-sm);
}

.upgrade-panel__budget-value {
    color: var(--color-primary);
    font-size: var(--font-size-large);
    -unity-font-style: bold;
}

.upgrade-panel__columns {
    flex-direction: row;
    justify-content: space-between;
}

.upgrade-column {
    flex: 1;
    flex-direction: column;
    margin: 0 var(--spacing-sm);
}

.upgrade-column__title {
    font-size: var(--font-size-normal);
    color: var(--text-muted);
    -unity-font-style: bold;
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-xs);
    border-bottom-width: 2px;
    border-bottom-color: var(--color-primary);
}

.upgrade-column__title--infrastructure {
    border-bottom-color: var(--color-secondary);
}

.upgrade-column__title--cure {
    border-bottom-color: var(--color-primary);
}

.upgrade-card {
    background-color: rgba(9, 16, 28, 0.7);
    border-color: var(--surface-border);
    border-width: 1px;
    border-radius: var(--border-radius-small);
    padding: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    transition-property: background-color, border-color;
    transition-duration: var(--transition-fast);
}

.upgrade-card:hover {
    background-color: rgba(16, 26, 44, 0.8);
    border-color: var(--border-color-bright);
}

.upgrade-card--maxed {
    opacity: 0.6;
    border-color: var(--color-success);
}

.upgrade-card__header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-xs);
}

.upgrade-card__name {
    color: var(--text-primary);
    font-size: var(--font-size-normal);
    -unity-font-style: bold;
}

.upgrade-card__level {
    color: var(--text-accent);
    font-size: var(--font-size-small);
}

.upgrade-card__description {
    color: var(--text-secondary);
    font-size: var(--font-size-small);
    margin-bottom: var(--spacing-sm);
}

.upgrade-card__footer {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.upgrade-card__cost {
    color: var(--color-secondary);
    font-size: var(--font-size-small);
    -unity-font-style: bold;
}

.upgrade-card__button {
    background-color: var(--color-primary);
    border-width: 0;
    border-radius: var(--border-radius-small);
    color: rgb(3, 8, 16);
    padding: var(--spacing-xs) var(--spacing-md);
    font-size: var(--font-size-small);
    -unity-font-style: bold;
    min-height: 28px;
}

.upgrade-card__button:hover {
    background-color: #6ce3ff;
}

.upgrade-card__button:disabled {
    background-color: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.4);
}

/* ========================================
   INCOME TOAST NOTIFICATION
   ======================================== */

.hud-toast {
    position: absolute;
    top: 180px;
    left: var(--spacing-lg);
    background-color: rgba(80, 200, 120, 0.2);
    border-color: var(--color-success);
    border-width: 1px;
    border-radius: var(--border-radius-small);
    padding: var(--spacing-sm) var(--spacing-md);
    opacity: 0;
    translate: 0 -10px;
    transition-property: opacity, translate;
    transition-duration: var(--transition-normal);
}

.hud-toast--visible {
    opacity: 1;
    translate: 0 0;
}

.hud-toast--income {
    border-color: var(--color-success);
    background-color: rgba(80, 200, 120, 0.15);
}

.hud-toast__text {
    color: var(--color-success);
    font-size: var(--font-size-normal);
    -unity-font-style: bold;
}

/* Secondary HUD button style */
.hud-button--secondary {
    background-color: var(--color-tertiary);
    border-color: var(--color-tertiary);
    color: rgb(3, 8, 16);
}

.hud-button--secondary:hover {
    background-color: #c99eff;
}

.hud-button--secondary:disabled {
    background-color: rgba(183, 135, 255, 0.3);
    color: rgba(255, 255, 255, 0.4);
}

/* Modal host for overlays */
.hud-modal-host {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

/* ========================================
   PROVINCE PANEL (World-Space Diegetic UI)
   ======================================== */

.province-panel {
    background-color: var(--glass-background);
    border-color: var(--color-primary);
    border-width: 2px;
    border-radius: var(--border-radius-medium);
    padding: var(--spacing-md);
    min-width: 280px;
    max-width: 320px;
    opacity: 0;
    scale: 0.85;
    transition-property: opacity, scale;
    transition-duration: var(--transition-fast);
}

.province-panel--visible {
    opacity: 1;
    scale: 1;
}

.province-panel__header {
    margin-bottom: var(--spacing-sm);
    padding-bottom: var(--spacing-sm);
    border-bottom-width: 1px;
    border-bottom-color: rgba(79, 215, 255, 0.3);
}

.province-panel__title {
    font-size: var(--font-size-large);
    color: var(--color-primary);
    -unity-font-style: bold;
    -unity-text-align: middle-center;
}

.province-panel__stats {
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: var(--spacing-md);
}

.province-stat {
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.province-stat__label {
    font-size: var(--font-size-small);
    color: var(--text-muted);
    margin-bottom: var(--spacing-xs);
    -unity-font-style: bold;
}

.province-stat__value {
    font-size: var(--font-size-large);
    -unity-font-style: bold;
}

.province-stat__value--muted {
    color: var(--text-secondary);
}

.province-stat__value--warning {
    color: var(--color-warning);
}

.province-stat__value--danger {
    color: var(--color-error);
}

.province-stat__value--success {
    color: var(--color-success);
}

.province-panel__actions {
    flex-direction: column;
    align-items: stretch;
}

.province-action-button {
    border-width: 0;
    border-radius: var(--border-radius-small);
    padding: var(--spacing-md);
    -unity-font-style: bold;
    font-size: var(--font-size-normal);
    margin-bottom: var(--spacing-xs);
    transition-property: background-color, scale;
    transition-duration: var(--transition-fast);
}

.province-action-button--primary {
    background-color: var(--color-primary);
    color: rgb(3, 8, 16);
}

.province-action-button--primary:hover {
    background-color: #6ce3ff;
    scale: 1.02;
}

.province-action-button--primary:active {
    scale: 0.98;
}

.province-action-button--primary:disabled {
    background-color: rgba(79, 215, 255, 0.3);
    color: rgba(255, 255, 255, 0.4);
}

.province-panel__cost {
    font-size: var(--font-size-small);
    color: var(--color-secondary);
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    margin-top: var(--spacing-xs);
}

.province-panel__connector {
    position: absolute;
    bottom: -12px;
    left: 50%;
    translate: -50% 0;
    width: 0;
    height: 0;
    border-left-width: 12px;
    border-right-width: 12px;
    border-top-width: 12px;
    border-left-color: transparent;
    border-right-color: transparent;
    border-top-color: var(--color-primary);
}

/* ========================================
   SPLIT HUD (Top & Bottom Layout)
   ======================================== */

.split-hud-container {
    position: absolute;
    width: 100%;
    height: 100%;
}

/* Top HUD */
.top-hud {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    flex-direction: row;
    background-color: rgba(3, 7, 16, 0.92);
    border-bottom-width: 2px;
    border-bottom-color: var(--color-primary);
    padding: var(--spacing-xs) var(--spacing-md);
    justify-content: space-between;
    align-items: center;
    min-height: 48px;
    backdrop-filter: blur(8px);
}

.top-hud__section {
    flex-direction: column;
    align-items: flex-start;
}

.top-hud__section--right {
    align-items: center;
    flex-direction: row;
    justify-content: flex-end;
}

.top-hud__primary-text {
    font-size: var(--font-size-large);
    color: var(--text-primary);
    -unity-font-style: bold;
    margin-bottom: 2px;
}

.top-hud__secondary-text {
    font-size: var(--font-size-small);
    color: var(--text-secondary);
    margin-bottom: 1px;
}

.top-hud__tertiary-text {
    font-size: 11px;
    color: var(--text-muted);
}

.top-hud__button {
    background-color: var(--color-secondary);
    border-width: 0;
    border-radius: var(--border-radius-small);
    color: rgb(3, 8, 16);
    padding: var(--spacing-xs) var(--spacing-sm);
    font-size: var(--font-size-small);
    -unity-font-style: bold;
    margin-right: var(--spacing-sm);
    transition-property: background-color, scale;
    transition-duration: var(--transition-fast);
}

.top-hud__button:hover {
    background-color: #ffb580;
    scale: 1.05;
}

.top-hud__hint {
    font-size: 10px;
    color: var(--text-muted);
    -unity-font-style: bold;
    opacity: 0.7;
}

/* Bottom HUD */
.bottom-hud {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    flex-direction: row;
    background-color: rgba(3, 7, 16, 0.98);
    border-top-width: 2px;
    border-top-color: var(--color-primary);
    padding: var(--spacing-xs) var(--spacing-md);
    justify-content: space-between;
    align-items: center;
    min-height: 56px;
    backdrop-filter: blur(10px);
}

.bottom-hud__section {
    flex-direction: column;
    align-items: flex-start;
}

.bottom-hud__section--left {
    flex: 0 0 200px;
}

.bottom-hud__section--center {
    flex: 1;
    align-items: center;
    max-width: 400px;
    margin: 0 var(--spacing-lg);
}

.bottom-hud__section--right {
    flex: 0 0 200px;
    align-items: center;
    flex-direction: row;
    justify-content: flex-end;
}

.bottom-hud__primary-text {
    font-size: var(--font-size-large);
    color: var(--text-primary);
    -unity-font-style: bold;
    margin-bottom: 2px;
}

.bottom-hud__secondary-text {
    font-size: var(--font-size-small);
    color: var(--text-secondary);
    margin-bottom: 1px;
}

.bottom-hud__tertiary-text {
    font-size: 11px;
    color: var(--text-muted);
}

.bottom-hud__label {
    font-size: 10px;
    color: var(--text-muted);
    -unity-font-style: bold;
    letter-spacing: 0.5px;
    margin-bottom: var(--spacing-xs);
}

.bottom-hud__progress-bar {
    width: 100%;
    height: 12px;
    margin: var(--spacing-xs) 0;
}

.bottom-hud__budget {
    flex-direction: column;
    align-items: center;
    background-color: rgba(79, 215, 255, 0.08);
    border-radius: var(--border-radius-small);
    padding: var(--spacing-xs) var(--spacing-sm);
    margin-right: var(--spacing-sm);
}

.bottom-hud__budget-amount {
    font-size: var(--font-size-large);
    color: var(--color-primary);
    -unity-font-style: bold;
    margin-bottom: 2px;
}

.bottom-hud__budget-label {
    font-size: 9px;
    color: var(--text-muted);
    -unity-font-style: bold;
    letter-spacing: 0.3px;
}

.bottom-hud__button {
    background-color: var(--color-secondary);
    border-width: 0;
    border-radius: var(--border-radius-small);
    color: rgb(3, 8, 16);
    padding: var(--spacing-xs) var(--spacing-sm);
    font-size: var(--font-size-small);
    -unity-font-style: bold;
    margin-right: var(--spacing-sm);
    transition-property: background-color, scale;
    transition-duration: var(--transition-fast);
}

.bottom-hud__button--primary {
    background-color: var(--color-primary);
}

.bottom-hud__button:hover {
    scale: 1.05;
}

.bottom-hud__button--primary:hover {
    background-color: #6ce3ff;
}

.bottom-hud__hint {
    font-size: 10px;
    color: var(--text-muted);
    -unity-font-style: bold;
    opacity: 0.7;
}

.bottom-hud__status-hint {
    font-size: var(--font-size-small);
    color: var(--text-muted);
    -unity-text-align: middle-right;
    opacity: 0.8;
}

/* ========================================
   INCOME TOAST (Updated for Bottom Bar)
   ======================================== */

.income-toast {
    position: absolute;
    bottom: 100px;
    left: 50%;
    translate: -50% 0;
    background-color: rgba(80, 200, 120, 0.15);
    border-color: var(--color-success);
    border-width: 2px;
    border-radius: var(--border-radius-medium);
    padding: var(--spacing-sm) var(--spacing-lg);
    opacity: 0;
    scale: 0.9;
    transition-property: opacity, scale;
    transition-duration: var(--transition-normal);
}

.income-toast--visible {
    opacity: 1;
    scale: 1;
}

.income-toast__text {
    color: var(--color-success);
    font-size: var(--font-size-normal);
    -unity-font-style: bold;
    -unity-text-align: middle-center;
}

/* ========================================
   MODAL HOST (Updated for Bottom Bar)
   ======================================== */

.modal-host {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(2, 5, 12, 0.85);
    align-items: center;
    justify-content: center;
}
